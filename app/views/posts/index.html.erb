<div class="max-w-screen-xl mx-auto p-3">
    <h1 class="text-center text-3xl">All Posts</h1>
    <div class=" w-96 mt-10 mx-auto h-1/4">
        


        <% @posts.each do |post| %>
            <div class="m-3 border border-gray-900 shwdow-xl rounded-xl px-7 py-5">
                <p><%= post.content %></p>
                <p class="mt-5 text-right italic text-sm">by <%= post.user.username %></p>
            </div>
        <% end %> 


        <div class="mt-20 flex justify-center">
            <%= link_to 'Create New Post', new_post_path, class:"text-xl text-center px-5 py-3 rounded-xl bg-gray-900 text-white hover:text-gray-900 hover:bg-white border-2 border-gray-900 transition duration-200" %>
        </div>
    </div>
</div>