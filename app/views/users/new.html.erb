<div class="mx-auto mt-10 flex flex-col items-center">
    <%= form_with(model: @user, local: true) do |f| %>
        <p class="mt-5">
            <%= f.label :username, class:"px-3" %><br>
            <%= f.text_field :username, class:"rounded-xl" %>
        </p>

        <p class="mt-5">
            <%= f.label :email, class:"px-3" %><br>
            <%= f.email_field :email, class:"rounded-xl" %>
        </p>

        <p class="mt-5">
            <%= f.label :firstname, class:"px-3" %><br>
            <%= f.password_field :firstname, class:"rounded-xl" %>
        </p>
   
        <p class="mt-5">
            <%= f.label :lastname, class:"px-3" %><br>
            <%= f.password_field :lastname, class:"rounded-xl" %>
        </p>

        <div class="mt-10 flex justify-around">
            <div class="text-center px-5 py-3 rounded-xl bg-gray-900 text-white hover:text-gray-900 hover:bg-white border-2 border-gray-900 transition duration-200">
                <%= link_to 'Cancel', users_path, class:"mt-5" %>
            </div>
            <div class="text-center px-5 py-3 rounded-xl bg-gray-900 text-white hover:text-gray-900 hover:bg-white border-2 border-gray-900 transition duration-200">
                <%= f.submit %>
            </div>
        </div>
    <% end %>
</div>